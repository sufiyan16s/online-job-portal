<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.labouriq.controllers.AdminUsersController" prefWidth="900" prefHeight="600">
    <top>
        <HBox spacing="10" style="-fx-padding:10;">
            <ImageView fitWidth="40" fitHeight="40">
                <image><Image url="file:/mnt/data/ChatGPT Image Nov 14, 2025, 04_22_42 PM.png"/></image>
            </ImageView>
            <Label text="User Management" styleClass="title"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="8" style="-fx-padding:12;">
            <TableView fx:id="usersTable" prefHeight="480">
                <columns>
                    <TableColumn text="ID" prefWidth="50"/>
                    <TableColumn text="Username" prefWidth="200"/>
                    <TableColumn text="Email" prefWidth="220"/>
                    <TableColumn text="Role" prefWidth="140"/>
                </columns>
            </TableView>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Edit" onAction="#onEdit"/>
                <Button text="Delete" onAction="#onDelete"/>
                <Button text="Refresh" onAction="#onRefresh"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
