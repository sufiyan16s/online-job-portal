<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.labouriq.controllers.SignupController"
            prefWidth="900" prefHeight="560">

    <stylesheets>
        <String fx:value="/css/styles.css"/>
    </stylesheets>

    <HBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20">
        <!-- Left branding panel -->
        <VBox spacing="18" prefWidth="360" styleClass="left-panel">
            <ImageView fitWidth="80" fitHeight="80">
                <image>
                    <!-- absolute path to uploaded image (works immediately for testing) -->

                </image>
            </ImageView>

            <Label text="Create account" styleClass="title"/>
            <Label text="Join labouriq â€” find jobs or hire talent fast." wrapText="true" />

            <HBox spacing="8">
                <Button text="Job Seeker" styleClass="ghost-btn"/>
                <Button text="Employer" styleClass="ghost-btn"/>
            </HBox>

            <VBox>
                <Label text="Quick stats" styleClass="section-title"/>
                <HBox spacing="20">
                    <VBox>
                        <Label text="1.2k" styleClass="stat-large"/>
                        <Label text="Jobs posted"/>
                    </VBox>
                    <VBox>
                        <Label text="5.4k" styleClass="stat-large"/>
                        <Label text="Applications"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>

        <!-- Right signup form -->
        <VBox spacing="12" prefWidth="520" styleClass="right-panel">
            <Label text="Sign up for WorkNearMe" styleClass="form-title"/>
            <TextField fx:id="nameField" promptText="Full name"/>
            <TextField fx:id="emailField" promptText="you@example.com"/>
            <PasswordField fx:id="passwordField" promptText="Password (min 6 chars)"/>
            <ChoiceBox fx:id="roleChoice" prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="JOBSEEKER"/>
                        <String fx:value="EMPLOYER"/>
                    </FXCollections>
                </items>
            </ChoiceBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="termsCheck" text="I agree to terms"/>
            </HBox>

            <Button fx:id="signupButton" text="Create account" onAction="#onSignUp" styleClass="primary-btn"/>
            <Label fx:id="messageLabel" textFill="red" wrapText="true"/>

            <Separator/>
            <Label text="Or continue with" styleClass="muted"/>
            <HBox spacing="10">
                <Button text="Google" styleClass="social-btn"/>
                <Button text="GitHub" styleClass="social-btn"/>
            </HBox>

            <HBox alignment="CENTER" spacing="6">
                <Label text="Already have an account?" styleClass="muted"/>
                <Hyperlink text="Sign in" onAction="#onBackToLogin"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
